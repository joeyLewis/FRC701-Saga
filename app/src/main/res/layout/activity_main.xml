<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.vandenrobotics.saga.MainActivity"
    style="@style/DefaultTheme">

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/editText_EventsFilter"
        android:layout_gravity="center_horizontal"
        android:hint="@string/editText_EventsFilterHint"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:singleLine="true"/>

    <ListView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/listView_Events"
        android:layout_gravity="center_horizontal"
        android:layout_below="@+id/editText_EventsFilter"
        android:layout_above="@+id/button_OpenEvent"
        android:choiceMode="singleChoice"
        android:listSelector="@color/VandenGreen"/>

    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="@string/button_OpenEvent"
        android:id="@+id/button_OpenEvent"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:backgroundTint="@color/VandenGreen"
        android:textColor="@color/Gold"/>

</RelativeLayout>
